@model  UserInfo
@{
    ViewBag.Title = "Başvuru Formu";
}
<h1 class="h4">TOPLANTI KATILIM FORMU</h1>
<form asp-action="Apply" method="post" novalidate>
<div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">İsim</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Telefon</label>
        <input asp-for="Phone"  class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email"  class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="WillAttend" class="form-label">Katılacak Durumu </label>
        <select asp-for="WillAttend" class="form-select">
            <option value="">Seçiniz</option>
            <option value="true">Evet, Geliyorum</option>
            <option value="false">Hayır, Gelmiyorum</option>
        </select>
    </div>

    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>